<div class="mb-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Credit Score Details</h1>
    <%= link_to "Calculate New Score", calculate_credit_scores_path, method: :post, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <!-- Main Score Display -->
  <div class="bg-white rounded-lg shadow-md p-6 text-center">
    <div class="text-5xl font-bold <%= @credit_score.score_color %> mb-4">
      <%= @credit_score.score %>
    </div>
    <div class="text-xl text-gray-700 mb-2">
      <%= @credit_score.risk_level.humanize %>
    </div>
    <div class="text-sm text-gray-500">
      Calculated <%= @credit_score.calculated_at.strftime("%B %d, %Y") %>
    </div>
    
    <!-- Score Range Visual -->
    <div class="mt-6">
      <div class="bg-gray-200 rounded-full h-3">
        <div class="bg-gradient-to-r from-red-500 via-yellow-500 to-green-500 h-3 rounded-full" 
             style="width: <%= ((@credit_score.score - 300) / 550.0 * 100).round(1) %>%"></div>
      </div>
      <div class="flex justify-between text-xs text-gray-500 mt-2">
        <span>Poor<br>300</span>
        <span>Fair<br>580</span>
        <span>Good<br>670</span>
        <span>Excellent<br>850</span>
      </div>
    </div>
  </div>
  
  <!-- Loan Eligibility -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Loan Eligibility</h3>
    <% if @credit_score.loan_eligibility['eligible'] %>
      <div class="text-green-600 mb-4">
        <svg class="inline h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Eligible for loans
      </div>
      
      <div class="space-y-3">
        <div>
          <span class="text-sm text-gray-600">Max Loan Amount:</span>
          <div class="text-lg font-semibold text-gray-900">
            ₦<%= number_with_delimiter(@credit_score.loan_eligibility['max_loan_amount']) %>
          </div>
        </div>
        
        <div>
          <span class="text-sm text-gray-600">Interest Rate Range:</span>
          <div class="text-lg font-semibold text-gray-900">
            <%= @credit_score.loan_eligibility['interest_rate_range'] %>
          </div>
        </div>
        
        <div>
          <span class="text-sm text-gray-600">Available Terms:</span>
          <div class="text-sm text-gray-700">
            <%= @credit_score.loan_eligibility['loan_term_options'].join(', ') %>
          </div>
        </div>
      </div>
      
      <%= link_to "Apply for Loan", new_loan_application_path, class: "mt-4 block w-full text-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
    <% else %>
      <div class="text-red-600 mb-4">
        <svg class="inline h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        Not currently eligible
      </div>
      <p class="text-sm text-gray-600">
        Focus on improving your financial habits and try again later.
      </p>
    <% end %>
  </div>
  
  <!-- Quick Stats -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Financial Summary</h3>
    <div class="space-y-3">
      <div>
        <span class="text-sm text-gray-600">Monthly Income:</span>
        <div class="text-lg font-semibold text-gray-900">
          ₦<%= number_with_delimiter(@credit_score.analysis_data.dig('income_analysis', 'average_monthly_income') || 0) %>
        </div>
      </div>
      
      <div>
        <span class="text-sm text-gray-600">Cash Flow Trend:</span>
        <div class="text-sm text-gray-700 capitalize">
          <%= @credit_score.analysis_data.dig('cash_flow_analysis', 'cash_flow_trend') || 'N/A' %>
        </div>
      </div>
      
      <div>
        <span class="text-sm text-gray-600">Account Health:</span>
        <div class="text-lg font-semibold text-gray-900">
          ₦<%= number_with_delimiter(@credit_score.analysis_data.dig('account_health', 'current_total_balance') || 0) %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Detailed Analysis -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- Income Analysis -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Income Analysis</h3>
    <% income_analysis = @credit_score.analysis_data['income_analysis'] %>
    <div class="space-y-3">
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">Income Trend:</span>
        <span class="text-sm font-medium text-gray-900 capitalize">
          <%= income_analysis['income_trend'] %>
        </span>
      </div>
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">Stability Rating:</span>
        <span class="text-sm font-medium text-gray-900">
          <%= income_analysis['stability_rating'].round(1) %>%
        </span>
      </div>
    </div>
  </div>
  
  <!-- Spending Analysis -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Spending Analysis</h3>
    <% spending_analysis = @credit_score.analysis_data['spending_analysis'] %>
    <div class="space-y-3">
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">Monthly Spending:</span>
        <span class="text-sm font-medium text-gray-900">
          ₦<%= number_with_delimiter(spending_analysis['total_monthly_spending']) %>
        </span>
      </div>
      <div class="flex justify-between">
        <span class="text-sm text-gray-600">Largest Category:</span>
        <span class="text-sm font-medium text-gray-900 capitalize">
          <%= spending_analysis['largest_expense_category']&.humanize %>
        </span>
      </div>
    </div>
  </div>
</div>

<!-- Recommendations -->
<div class="bg-white rounded-lg shadow-md p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Recommendations</h3>
  <% if @credit_score.recommendations.any? %>
    <ul class="space-y-2">
      <% @credit_score.recommendations.each do |recommendation| %>
        <li class="flex items-start">
          <svg class="flex-shrink-0 h-5 w-5 text-blue-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm text-gray-700"><%= recommendation %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">Keep up the good work! Your financial habits are on track.</p>
  <% end %>
</div>