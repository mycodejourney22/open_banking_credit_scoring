<div class="max-w-md mx-auto">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Connect Bank Account</h1>
    <p class="text-gray-600">Connect your bank account to start building your credit profile</p>
  </div>

  <%= simple_form_for @bank_connection, html: { class: "space-y-6" } do |f| %>
    <div>
      <%= f.input :bank_code, 
          label: "Select Your Bank",
          collection: @available_banks.map { |bank| [bank['name'], bank['code']] },
          prompt: "Choose your bank",
          input_html: { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
    </div>

    <div>
      <%= f.input :account_number,
          label: "Account Number",
          placeholder: "Enter your account number",
          input_html: { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Secure Connection</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Your banking information is encrypted and secure. We only access data you authorize and never store your banking credentials.</p>
          </div>
        </div>
      </div>
    </div>

    <div>
      <%= f.submit "Connect Account", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "Back to Accounts", bank_connections_path, class: "text-sm text-blue-600 hover:text-blue-500" %>
  </div>
</div>
