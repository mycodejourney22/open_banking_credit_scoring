<div class="mb-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Bank Connections</h1>
    <%= link_to "Connect New Account", new_bank_connection_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
</div>

<% if @bank_connections.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @bank_connections.each do |connection| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-lg font-semibold text-gray-900"><%= connection.bank_name %></h3>
            <p class="text-sm text-gray-600">**** **** **** <%= connection.account_number.last(4) %></p>
            <p class="text-xs text-gray-500"><%= connection.account_name %></p>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= connection.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= connection.status.humanize %>
          </span>
        </div>
        
        <% if connection.latest_balance %>
          <div class="mb-4">
            <p class="text-2xl font-bold text-gray-900">
              ₦<%= number_with_delimiter(connection.latest_balance.current_balance) %>
            </p>
            <p class="text-xs text-gray-500">
              Updated <%= time_ago_in_words(connection.latest_balance.balance_date) %> ago
            </p>
          </div>
        <% end %>
        
        <div class="flex space-x-2">
          <%= link_to "View Details", connection, class: "flex-1 text-center px-3 py-1 border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50" %>
          <%= link_to "Sync", sync_bank_connection_path(connection), method: :post, class: "flex-1 text-center px-3 py-1 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No bank accounts connected</h3>
    <p class="mt-1 text-sm text-gray-500">Get started by connecting your first bank account.</p>
    <div class="mt-6">
      <%= link_to "Connect Bank Account", new_bank_connection_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  </div>
<% end %>