<!-- app/views/dashboard/index.html.erb -->
<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  <p class="text-gray-600">Welcome back, <%= current_user.first_name %>!</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
  <!-- Credit Score Card -->
  <div class="lg:col-span-1">
    <%= render 'shared/credit_score_card', credit_score: @latest_credit_score %>
  </div>
  
  <!-- Total Balance Card -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-2">Total Balance</h3>
    <div class="text-3xl font-bold text-green-600">
      ₦<%= number_with_delimiter(@total_balance) %>
    </div>
    <p class="text-sm text-gray-600 mt-1">
      Across <%= pluralize(@bank_connections.count, 'account') %>
    </p>
  </div>
  
  <!-- Quick Actions Card -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
    <div class="space-y-2">
      <button onclick="openBankConnectionModal()" class="block w-full text-center px-4 py-2 border border-blue-600 text-blue-600 rounded-md hover:bg-blue-50">
        Connect Bank Account
      </button>
      <%= link_to "Apply for Credit", new_credit_application_path, class: "block w-full text-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- Spending Trend Chart -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Monthly Spending Trend</h3>
    <%= line_chart @monthly_spending, prefix: "₦", thousands: "," %>
  </div>
  
  <!-- Spending by Category Chart -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Spending by Category</h3>
    <%= pie_chart @spending_by_category, prefix: "₦", thousands: "," %>
  </div>
</div>

<!-- Recent Transactions -->
<div class="bg-white rounded-lg shadow-md">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900">Recent Transactions</h3>
  </div>
  
  <% if @recent_transactions.any? %>
    <div class="divide-y divide-gray-200">
      <% @recent_transactions.each do |transaction| %>
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">
                <%= transaction.description %>
              </p>
              <p class="text-xs text-gray-500">
                <%= transaction.transaction_date.strftime("%B %d, %Y") %> • 
                <%= transaction.transaction_type.humanize %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium <%= transaction.amount > 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= transaction.amount > 0 ? '+' : '' %>₦<%= number_with_delimiter(transaction.amount.abs) %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="px-6 py-3 bg-gray-50 text-center">
      <%= link_to "View All Transactions", bank_connections_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
    </div>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500">
      <p>No transactions yet. Connect a bank account to see your transaction history.</p>
    </div>
  <% end %>
</div>

<!-- Include Bank Connection Modal -->
<%= render 'shared/bank_connection_modal' %>

<!-- app/views/bank_connections/index.html.erb -->
<div class="mb-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Bank Connections</h1>
    <button onclick="openBankConnectionModal()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
      Connect New Account
    </button>
  </div>
</div>

<% if @bank_connections.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @bank_connections.each do |connection| %>
      <div class="bg-white rounded-lg shadow-md p-6" data-connection-id="<%= connection.id %>">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-lg font-semibold text-gray-900"><%= connection.bank_name %></h3>
            <p class="text-sm text-gray-600">**** **** **** <%= connection.account_number&.last(4) %></p>
          </div>
          <div class="flex flex-col items-end space-y-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                         <%= case connection.status
                             when 'active' then 'bg-green-100 text-green-800'
                             when 'pending' then 'bg-yellow-100 text-yellow-800'
                             when 'expired' then 'bg-red-100 text-red-800'
                             when 'error' then 'bg-red-100 text-red-800'
                             else 'bg-gray-100 text-gray-800'
                             end %>">
              <%= connection.status.humanize %>
            </span>
            
            <% if connection.needs_token_refresh? %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                Needs Refresh
              </span>
            <% end %>
          </div>
        </div>
        
        <% latest_balance = connection.account_balances.order(:created_at).last %>
        <% if latest_balance %>
          <div class="mb-4">
            <p class="text-2xl font-bold text-gray-900">
              ₦<%= number_with_delimiter(latest_balance.current_balance) %>
            </p>
            <p class="text-xs text-gray-500">
              Updated <%= time_ago_in_words(latest_balance.balance_date) %> ago
            </p>
          </div>
        <% end %>
        
        <% if connection.status == 'pending' %>
          <div class="mb-4 p-3 bg-yellow-50 border border-yellow-200 rounded-md">
            <p class="text-sm text-yellow-800">
              <% if connection.consent_pending? %>
                Waiting for bank authorization. 
                <button class="continue-auth-btn underline" data-connection-id="<%= connection.id %>">
                  Continue Authorization
                </button>
              <% else %>
                Connection in progress...
              <% end %>
            </p>
          </div>
        <% elsif connection.status == 'expired' %>
          <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
            <p class="text-sm text-red-800">
              Connection expired. Please reconnect your account.
            </p>
          </div>
        <% elsif connection.status == 'error' %>
          <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
            <p class="text-sm text-red-800">
              Connection error: <%= connection.error_message&.truncate(100) %>
            </p>
          </div>
        <% end %>
        
        <div class="flex space-x-2">
          <%= link_to "View Details", connection, class: "flex-1 text-center px-3 py-1 border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50" %>
          
          <% if connection.active? %>
            <button class="sync-btn flex-1 text-center px-3 py-1 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700" 
                    data-connection-id="<%= connection.id %>">
              Sync
            </button>
          <% elsif connection.needs_token_refresh? %>
            <button class="refresh-btn flex-1 text-center px-3 py-1 bg-green-600 text-white rounded-md text-sm hover:bg-green-700" 
                    data-connection-id="<%= connection.id %>">
              Refresh
            </button>
          <% end %>
          
          <button class="revoke-btn px-3 py-1 bg-red-600 text-white rounded-md text-sm hover:bg-red-700" 
                  data-connection-id="<%= connection.id %>">
            Disconnect
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No bank accounts connected</h3>
    <p class="mt-1 text-sm text-gray-500">Get started by connecting your first bank account.</p>
    <div class="mt-6">
      <button onclick="openBankConnectionModal()" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
        Connect Bank Account
      </button>
    </div>
  </div>
<% end %>

<!-- Include Bank Connection Modal -->
<%= render 'shared/bank_connection_modal' %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const openBanking = new OpenBankingClient();
  
  // Handle continue authorization buttons
  document.querySelectorAll('.continue-auth-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const connectionId = this.dataset.connectionId;
      // Trigger polling for this specific connection
      openBanking.startConsentPolling(connectionId);
    });
  });
  
  // Handle sync buttons
  document.querySelectorAll('.sync-btn').forEach(btn => {
    btn.addEventListener('click', async function() {
      const connectionId = this.dataset.connectionId;
      
      try {
        this.disabled = true;
        this.textContent = 'Syncing...';
        
        await openBanking.syncConnection(connectionId);
        
        // Show success message and reload
        alert('Account synced successfully');
        window.location.reload();
        
      } catch (error) {
        alert(`Sync failed: ${error.message}`);
      } finally {
        this.disabled = false;
        this.textContent = 'Sync';
      }
    });
  });
  
  // Handle refresh buttons
  document.querySelectorAll('.refresh-btn').forEach(btn => {
    btn.addEventListener('click', async function() {
      const connectionId = this.dataset.connectionId;
      
      try {
        this.disabled = true;
        this.textContent = 'Refreshing...';
        
        const response = await fetch(`/bank_connections/${connectionId}/refresh`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': openBanking.getCSRFToken()
          }
        });
        
        const data = await response.json();
        
        if (data.status === 'success') {
          alert('Connection refreshed successfully');
          window.location.reload();
        } else {
          alert(`Refresh failed: ${data.message}`);
        }
        
      } catch (error) {
        alert(`Refresh failed: ${error.message}`);
      } finally {
        this.disabled = false;
        this.textContent = 'Refresh';
      }
    });
  });
  
  // Handle revoke buttons
  document.querySelectorAll('.revoke-btn').forEach(btn => {
    btn.addEventListener('click', async function() {
      const connectionId = this.dataset.connectionId;
      
      if (!confirm('Are you sure you want to disconnect this bank account?')) {
        return;
      }
      
      try {
        await openBanking.revokeConnection(connectionId);
      } catch (error) {
        alert(`Failed to disconnect: ${error.message}`);
      }
    });
  });
});
</script>