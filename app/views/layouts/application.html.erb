<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Open Banking Credit Scoring</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Chart.js for visualizations -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>

  <body class="bg-gray-50">
    <nav class="bg-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <%= link_to "Credit Score", root_path, class: "text-xl font-bold text-blue-600" %>
          </div>
          
          <% if user_signed_in? %>
            <div class="flex items-center space-x-4">
              <%= link_to "Dashboard", root_path, class: "text-gray-700 hover:text-blue-600" %>
              <%= link_to "Bank Accounts", bank_connections_path, class: "text-gray-700 hover:text-blue-600" %>
              <%= link_to "Credit Score", credit_scores_path, class: "text-gray-700 hover:text-blue-600" %>
              <%= link_to "Applications", credit_applications_path, class: "text-gray-700 hover:text-blue-600" %>
              
              <div class="relative" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="flex items-center text-gray-700 hover:text-blue-600">
                  <%= current_user.full_name %>
                  <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                </button>
                
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50">
                  <%= link_to "Profile", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="flex items-center space-x-4">
              <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-blue-600" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 px-4">
      <% flash.each do |type, message| %>
        <div class="mb-4 p-4 rounded-md <%= type == 'notice' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
          <%= message %>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>