<% if credit_score %>
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Credit Score</h3>
      <span class="text-sm text-gray-500">
        Updated <%= time_ago_in_words(credit_score.calculated_at) %> ago
      </span>
    </div>
    
    <div class="text-center">
      <div class="text-4xl font-bold text-blue-600 mb-2">
        <%= credit_score.score %>
      </div>
      <div class="text-lg font-medium text-gray-700 mb-2">
        Grade: <%= credit_score.grade %>
      </div>
      <div class="text-sm text-gray-600 mb-4">
        <%= credit_score.risk_level %>
      </div>
      
      <!-- Score range indicator -->
      <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
        <div class="bg-blue-600 h-2 rounded-full" style="width: <%= ((credit_score.score - 300) / 550.0 * 100).round(1) %>%"></div>
      </div>
      
      <div class="flex justify-between text-xs text-gray-500">
        <span>300</span>
        <span>850</span>
      </div>
    </div>
    
    <% if credit_score.improvement_suggestions.any? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <h4 class="text-sm font-medium text-gray-900 mb-2">Improvement Tips</h4>
        <ul class="text-sm text-gray-600 space-y-1">
          <% credit_score.improvement_suggestions.first(3).each do |suggestion| %>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">â€¢</span>
              <%= suggestion %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-md p-6 text-center">
    <div class="text-gray-500 mb-4">
      <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No Credit Score Yet</h3>
    <p class="text-gray-600 mb-4">Connect your bank account to get your credit score calculated</p>
    <%= link_to "Calculate Score", calculate_credit_scores_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% end %>